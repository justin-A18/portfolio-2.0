---
import CustomLink from '../atoms/CustomLink.astro';
import InfoBox from '../atoms/InfoBox.astro';
import BoxNetworks from '../molecules/BoxNetworks.astro';
---

<section class='relative overflow-hidden'>
	<div
		class='container h-[100dvh] min-h-[530px] max-md:pb-10 flex justify-between items-center max-md:flex-col'>
		<div
			class='max-md:grow max-md:flex flex-col justify-center items-start max-w-[544px]'>
			<h1
				class='slide-up-and-fade leading-[.95] text-6xl sm:text-[80px] font-anton uppercase'>
				<span class='text-primary block'>Frontend</span>
				<span class='ml-4 block'>Developer</span>
			</h1>
			<p
				class='slide-up-and-fade mt-6 font-roboto text-base sm:text-lg text-muted-foreground'>
				I'm <span class='text-white font-medium'>Justin Huertas</span>, a
				Frontend Developer with over 1 year of experience building scalable and
				dynamic web solutions. I focus on efficiency, user experience, and
				innovation in every project.
			</p>

			<div
				class='inline-flex lg:items-center flex-col lg:flex-row sm:justify-between w-full'>
				<div>
					<CustomLink
						href='#'
						label='Contact me'
					/>
				</div>

				<BoxNetworks />
			</div>
		</div>

		<div
			class='md:absolute bottom-[10%] right-[4%] flex md:flex-col gap-4 md:gap-8 text-center md:text-right'>
			<InfoBox
				title='1+'
				label='Year of Experience'
			/>
			<InfoBox
				title='5+'
				label='Completed Projects'
			/>
			<InfoBox
				title='10k+'
				label='Hours Worked'
			/>
		</div>
	</div>
</section>
