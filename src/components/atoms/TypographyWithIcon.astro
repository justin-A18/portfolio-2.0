---
import svgRef from '../../assets/flower.svg';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class='flex items-center gap-4 mb-10'>
	<img
		class='size-6 spin-slow'
		src={svgRef.src}
		alt='flower'
		loading='lazy'
	/>
	<h2 class='text-xl uppercase leading-none'>{title}</h2>
</div>
